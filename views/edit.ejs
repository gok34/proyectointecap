  <body>
      <% if(usuario) {  %>
      <div class="container mt-8">
    
        <h1 class="p-8 text-center ">EDITAR USUARIOS</h1>
      
  
      
        <form action="/actualizar" method="POST">
            <div class="form-row">
                <input  name="id"  id="id" placeholder="id" value="<%=usuario.usuario_id %>" hidden >
              <div class="form-group col-md-6">
                <label for="inputEmail4">Nombre</label>
                <input type="text" name="nombre" class="form-control" id="nombre" placeholder=" Ingrese Nombre" value="<%=usuario.nombre %>">
              </div>
              <div class="form-group col-md-6">
                <label for="inputPassword4">Apellido</label>
                <input type="text" name="apellido" class="form-control" id="apellido" placeholder=" Ingrese Apellido" value="<%=usuario.apellido %>">
              </div>
            </div>
            <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputAddress">telefono</label>
              <input type="number" name="telefono" class="form-control" id="telefono" placeholder="telefono" value="<%=usuario.telefono %>">
            </div>
            <div class="form-group col-md-6">
              <label for="inputAddress2">Direccion</label>
              <input type="text" name="direccion" class="form-control" id="direccion" placeholder="Direccion" value="<%=usuario.direcion %>">
            </div>

        </div>

            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="inputAddress2">correo</label>
                <input type="email" name="correo" class="form-control" id="Correo" placeholder="Ingrese Correo" value="<%=usuario.correo %>" required >
              </div>

              <div class="form-group col-md-4">
                <label for="inputState">Rol de Usuario</label>
                <select id="rol" name="rol" class="form-control">
                    <option <%=usuario.rol_id=='1' ? "selected":""  %> value="1"  >administrador</option>
                    <option <%=usuario.rol_id=='2' ? "selected":""  %> value="2" >gerente</option>
                    <option <%=usuario.rol_id=='3' ? "selected":""  %> value="3" >usuario</option>
                
                 
               
                </select>
              </div>
              <div class="form-group col-md-4">
                <label for="inputAddress2">Contraseña</label>
                <input type="password" name="contraseña" class="form-control" id="contraseña" placeholder="Ingrese contraseña" value="<%=usuario.contraseña %>">
              </div>
            
            </div>
          
            <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg ">guardar</button>
        </form>
        <a class="btn btn-primary btn-lg" href="/admin" role="button">Regresar</a>
    
        </div>
        
          

       </div>


      </div>
      <% }  %>
<script>
    var urlParams = new URLSearchParams(window.location.search);
    if(urlParams.has('fail') && urlParams.get('fail')){
    swal({
    title: "Fallo Creacion nuevo usuario",
    text: "CORREO DUPLICADO", 
    icon: "error",
    button: "Okay",
    }).then(()=>{
        console.log(window.location.hostname)
    window.location.replace(window.location.origin + '/crear');

    })
}
</script>


